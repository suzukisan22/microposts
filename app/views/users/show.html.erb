<style>
  .mb10{
    margin-bottom: 10px;
  }
  
  #edit{
    font-size: 1.25em;
    border: 1px solid #eeeeee;
    padding: 5px;
    border-radius: 5px;
    color: #fff;
    margin-top: 10px;
  }
  h3{
    text-indent: 2em;
  }
  
  .w100{
    width: 100%;
  }
  
</style>


<div class="row">
  <aside class="col-md-4">
    <div class="row">
      <div class="row w100">
      <h1>
        <div class="col-xs-3"><%= gravatar_for @user %></div>
        <div class="col-xs-9"><%= @user.name %></div></h1> </div> 
       <p id="edit" class="btn btn-sm btn-success w100"><%= link_to "edit" , edit_user_path(@user) %></p>
           
          

              

      
      
      <h3>
        <div class="row">
          <div class="col-xs-6">
    <p><%= @user.following_users.count %><br><%= link_to "followings" , followings_url %></p>
    
    
    </div>
    
    <div class="col-xs-6">
           <p><%= @user.followed_users.count %><br><%= link_to "followings" , followers_url %></p>
           
           </div>
</h3>


    <section>
    <h4>


      
   <div class="w100">   
  <table class="table table-striped">
 <tbody>
      <tr>
        <td>Name</td>
        <td><%= @user.name %></td>
      </tr>
      <tr>
        <td>Area</td>
        <td><%= @user.area %></td>
      </tr>
      <tr>
        <td>Job</td>
        <td><%= @user.job %></td>
      </tr>
      <tr>
        <td>E-mail</td>
        <td><%= @user.email %></td>
      </tr>
      <tr>
        <td>profile</td>
        <td><%= @user.profile %></td>
      </tr>
    </tbody>
  </table>
  
</div>

  
  
</h4>
    </section>


</div>
  </aside>
  <div class="col-md-8">
    <%= render 'follow_form' if logged_in? %>
    <% if @user.microposts.any? %>
      <h3>Microposts (<%= @user.microposts.count %>)</h3>
      <ol class="microposts">
        <%= render @microposts %>
      </ol>
    <% end %>
  </div>
</div>

